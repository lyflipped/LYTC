<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/goodsimage"
        android:layout_width="107dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal"

            android:layout_weight="1">

            <TextView
                android:id="@+id/goodsn"
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:text="商品名："
                android:gravity="right"
                android:textSize="15dp"
                android:textColor="@color/avoscloud_blue"
                />

            <TextView
                android:id="@+id/goodsname"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="Name"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="1">

            <TextView
                android:id="@+id/goodsclass"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="15dp"
                android:textColor="@color/avoscloud_blue"
                android:text="分类：" />

            <TextView
                android:id="@+id/goodsnum"
                android:layout_width="216dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="1">

            <TextView
                android:id="@+id/goodsprc"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="安心会员价 "
                android:textColor="@color/pricered"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/goodsprice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Price"
                android:textColor="@color/pricered"

                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>