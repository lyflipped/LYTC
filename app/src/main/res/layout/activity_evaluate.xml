<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.liyang.mynewfragment.EvaluateActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center|left"
                android:text="商品评分：" />

            <RatingBar
                android:id="@+id/rating_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"/>
        </LinearLayout>

        <EditText
            android:id="@+id/eva_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:ems="10"
            android:hint="@string/eva_hint"
            android:textSize="15dp"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center|left"
            android:text="物流服务评价"
            android:layout_weight="0.11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_weight="0.23">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="商品包装：" />

                <RatingBar
                    android:id="@+id/goods_face"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1"
                    android:layout_weight="0.14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="送货速度：" />

                <RatingBar
                    android:id="@+id/express_speed"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.76"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="配送员服务态度：" />

                <RatingBar
                    android:id="@+id/exp_attitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/submit_eva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/avoscloud_feedback_white"
            android:background="@color/pricered"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="提     交" />
    </LinearLayout>
</LinearLayout>
