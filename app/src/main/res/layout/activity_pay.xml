<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liyang.mynewfragment.payActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="vertical"
        android:layout_weight="0.30">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.33"
            android:background="@color/avoscloud_blue"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/lightwhite"
            android:text="恭喜你下单成功！" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:text="订单需支付金额:" />

            <TextView
                android:id="@+id/paymoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/pricered"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="请选择支付方式"
        android:layout_weight="0.39" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView3"
            android:layout_width="89dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/zhifubao" />

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.13">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center|left"
                android:text="支付宝" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="推荐支付宝用户使用" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/Alipay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:checked="true"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView2"
            android:layout_width="89dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/weichat" />

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.13">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center|left"
                android:text="微信支付" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="推荐微信用户使用" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/weichatpay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:checked="false"
            />
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/pay_button"
        android:layout_marginTop="50dp"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:background="@color/pricered"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/lightwhite"
        android:text="立即支付" />
</LinearLayout>
