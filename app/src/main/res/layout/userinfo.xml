<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:weightSum="1">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/avoscloud_blue"
        android:layout_weight="0.19">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/touxiang"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/real_tx3"
            android:layout_weight="0.43" />

        <TextView
            android:id="@+id/mys_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"

            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/avoscloud_feedback_white"
            android:text="用户名" />

        <TextView
            android:id="@+id/mys_huizhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/avoscloud_feedback_white"
            android:text="用户徽章" />

        <TextView
            android:id="@+id/mys_dengchu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:clickable="false"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/avoscloud_feedback_white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal"
        android:layout_weight="0.30">

        <TextView
            android:id="@+id/dingdan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:gravity="center"
            android:textStyle="bold"
            android:text="全部订单" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daifukuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="待付款" />

        <TextView
            android:id="@+id/daifahuo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="待发货" />

        <TextView
            android:id="@+id/daishouhuo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="待收货" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shoucang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="收藏" />

        <TextView
            android:id="@+id/pingjia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="待评价" />

        <TextView
            android:id="@+id/shouhou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="售后" />
    </LinearLayout>

</LinearLayout>